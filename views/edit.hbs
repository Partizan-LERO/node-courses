<h1>Edit course {{course.title}}</h1>

{{# if error }}
    <p class="alert">{{ error }}</p>
{{/if}}

<form class="course-form" method="post" action="/courses/{{course.id}}/edit">
    <div class="row">
        <div class="input-field">
            <input placeholder="Placeholder" required id="title" name="title" value="{{course.title}}" type="text" class="validate">
            <label for="title">Course Name</label>
            <span class="helper-text" data-error="Type name" data-success="right"></span>
        </div>
        <div class="input-field">
            <input placeholder="Placeholder" required id="price" value="{{course.price}}" name="price" type="text" min="1" class="validate">
            <label for="price">Price</label>
            <span class="helper-text" data-error="Type price" data-success="right"></span>
        </div>

        <div class="input-field">
            <input placeholder="Placeholder" required id="image" value="{{course.image}}" name="image" type="text" class="validate">
            <label for="image">Image</label>
            <span class="helper-text" data-error="Type url" data-success="right"></span>

        </div>

        <input type="hidden" name="_csrf" value="{{csrf}}">
        <button class="btn btn-primary" type="submit">Update</button>
    </div>
</form>

<form action="/courses/remove/{{course.id}}" method="post">
    <input type="hidden" name="_csrf" value="{{csrf}}">
    <button class="btn red" type="submit">Delete</button>
</form>