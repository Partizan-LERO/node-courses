<div class="auth">
    <div class="row">
        <div class="col s12">
            <ul class="tabs">
                <li class="tab col s6"><a class="active" href="#login">Login</a></li>
                <li class="tab col s6"><a href="#register">Register</a></li>
            </ul>
        </div>
        <div id="login" class="col s6 offset-s3">
            {{# if loginError }}
                <p class="alert">{{ loginError }}</p>
            {{/if}}
            <h1>Log in</h1>
            <form class="col s12" method="post" action="/auth/login">
                <div class="row">
                    <div class="input-field">
                        <input placeholder="E-mail" required id="email" name="email" type="email" class="validate">
                        <label for="email">E-mail</label>
                        <span class="helper-text" data-error="Type email"></span>
                    </div>
                    <div class="input-field">
                        <input placeholder="Password" required id="password" name="password" type="password" class="validate">
                        <label for="password">Password</label>
                        <span class="helper-text" data-error="Type password"></span>
                    </div>

                    <input type="hidden" name="_csrf" value="{{csrf}}">

                    <p><a href="/auth/reset">Forgot your password?</a></p>
                    
                    <button type="submit" class="btn btn-primary">Login</button>
                </div>
            </form>
        </div>
        <div id="register" class="col s6 offset-s3">
            {{# if registerError }}
                <p class="alert">{{ registerError }}</p>
            {{/if}}
            <h1>Register</h1>
            <form class="col s12" method="post" action="/auth/register">
                <div class="row">
                    <div class="input-field">
                        <input placeholder="E-mail" required id="remail" name="email" type="email" class="validate">
                        <label for="remail">E-mail</label>
                        <span class="helper-text" data-error="Type email"></span>
                    </div>
                    <div class="input-field">
                        <input placeholder="Name" required id="name" name="name" type="text" class="validate">
                        <label for="name">Name</label>
                        <span class="helper-text" data-error="Type name"></span>
                    </div>
                    <div class="input-field">
                        <input placeholder="Password" required id="rpassword" name="password" type="password" class="validate">
                        <label for="rpassword">Password</label>
                        <span class="helper-text" data-error="Type password"></span>
                    </div>

                    <div class="input-field">
                        <input placeholder="Confirm" required id="confirm" name="confirm" type="password" class="validate">
                        <label for="confirm">Confirm Password</label>
                        <span class="helper-text" data-error="Type password again"></span>
                    </div>

                    <input type="hidden" name="_csrf" value="{{csrf}}">
                    <button type="submit" class="btn btn-primary">Register</button>
                </div>
            </form>
        </div>
    </div>
</div>
