<div class="row">
    <div class="col s6 offset-s3">
        {{# if error }}
            <p class="alert">{{ error }}</p>
        {{/if}}
        <h3>Forgot your password?</h3>
        <form class="col s12" method="post" action="/auth/reset">
            <div class="row">
                <div class="input-field">
                    <input placeholder="E-mail" required id="email" name="email" type="email" class="validate">
                    <label for="email">E-mail</label>
                    <span class="helper-text" data-error="Type email"></span>
                </div>
                <input type="hidden" name="_csrf" value="{{csrf}}">
                <button type="submit" class="btn btn-primary">Reset</button>
            </div>
        </form>
    </div>
</div>
