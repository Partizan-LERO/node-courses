<h1>Profile</h1>

<div class="row">
    <div class="col s6">
        {{# if user.avatarUrl }}
            <img class="avatar" src="{{ user.avatarUrl }}" alt="avatar {{ user.name }}">
        {{ else }}
            <p>Avatar not found</p>
        {{/if}}
    </div>
    <div class="col s6">
        <form action="/profile" method="post" enctype="multipart/form-data">
            <p>Your email is <strong>{{ user.email }}</strong></p>
            <div class="input-field">
                <input required id="name" name="name" type="text" value="{{ user.name }}" class="validate">
                <label for="name">Name</label>
                <span class="helper-text" data-error="Type name" data-success="right"></span>
            </div>

            <div class="file-field input-field">
                <div class="btn">
                    <span>Avatar</span>
                    <input name="avatar" type="file">
                </div>
                <div class="file-path-wrapper">
                    <input class="file-path validate" type="text">
                </div>
            </div>

            <input type="hidden" name="_csrf" value="{{csrf}}">
            <button type="submit" class="btn btn-primary">Update</button>
        </form>
    </div>
</div>