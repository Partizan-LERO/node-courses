<h1>Cart</h1>
<div id="cart">
    {{#if courses.length}}
        <table>
            <thead>
            <tr>
                <th>Course</th>
                <th>Count</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {{#each courses}}
                <tr>
                    <td>{{title}}</td>
                    <td>{{count}}</td>
                    <td><button class="btn btn-small js-remove" data-id="{{id}}" data-csrf="{{@root.csrf}}">Remove</button></td>
                </tr>
            {{/each}}
            </tbody>
        </table>

        <p><strong>Price: </strong> <span class="price">{{price}}</span></p>

        <form action="/orders" method="post">
            <input type="hidden" name="_csrf" value="{{csrf}}">
            <button class="btn" type="submit">Order</button>
        </form>
    {{else}}
        <p>There are no any added courses yet.</p>
    {{/if}}
</div>
